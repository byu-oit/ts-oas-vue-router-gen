{
  "compilerOptions": {
    "target": "ES5",
    "experimentalDecorators": true,
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": [
    "lib/**/*"
  ],
  "compileOnSave": false
}
